{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2017",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "moduleResolution": "node",
        "removeComments": false,
        "lib": [
            "es2017"
        ]
    },
    "exclude": [
        "node_modules",
        "platforms"
    ]
}